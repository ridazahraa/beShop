<div class="top-bar">
    <h1><i class="fas fa-tachometer-alt"></i> Dashboard</h1>
</div>

<div class="content-box">
    <style>
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 15px;
            margin-bottom: 20px;
        }

        .stat-card {
            background: #0066cc;
            color: white;
            padding: 20px;
            border: 1px solid #0052a3;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
        }

        .stat-card:hover {
            transform: translateY(-5px);
        }

        .stat-card:nth-child(2) {
            background: #dc3545;
            border-color: #c82333;
        }

        .stat-card:nth-child(3) {
            background: #28a745;
            border-color: #218838;
        }

        .stat-card:nth-child(4) {
            background: #ffc107;
            color: #333;
            border-color: #e0a800;
        }

        .stat-card h3 {
            font-size: 16px;
            margin-bottom: 10px;
            opacity: 0.9;
        }

        .stat-card .number {
            font-size: 36px;
            font-weight: bold;
        }

        .stat-card i {
            font-size: 40px;
            opacity: 0.3;
            float: right;
        }

        .recent-section {
            margin-top: 30px;
        }

        .recent-section h2 {
            color: #2c3e50;
            margin-bottom: 20px;
        }

        .quick-actions {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }

        .quick-actions .btn {
            border-radius: 5px;
            font-size: 0.9rem;
        }
    </style>

    <div class="stats-grid">
        <div class="stat-card">
            <i class="fas fa-box"></i>
            <h3>Total Products</h3>
            <div class="number"><%= totalProducts %></div>
        </div>
        <div class="stat-card">
            <i class="fas fa-tags"></i>
            <h3>For Her Products</h3>
            <div class="number"><%= forHerCount %></div>
        </div>
        <div class="stat-card">
            <i class="fas fa-shopping-bag"></i>
            <h3>For Him Products</h3>
            <div class="number"><%= forHimCount %></div>
        </div>
        <div class="stat-card">
            <i class="fas fa-fire"></i>
            <h3>On Sale Products</h3>
            <div class="number"><%= onSaleCount %></div>
        </div>
        <div class="stat-card" style="background: #6f42c1; border-color: #5a32a3;">
            <i class="fas fa-shopping-cart"></i>
            <h3>Total Orders</h3>
            <div class="number"><%= totalOrders %></div>
        </div>
    </div>

    <div class="recent-section">
        <h2>Quick Actions</h2>
        <div class="quick-actions">
            <a href="/admin/products/add" class="btn btn-success">
                <i class="fas fa-plus"></i> Add New Product
            </a>
            <a href="/admin/products" class="btn btn-primary">
                <i class="fas fa-list"></i> View All Products
            </a>
            <a href="/admin/orders" class="btn btn-info">
                <i class="fas fa-shopping-cart"></i> Manage Orders
            </a>
        </div>
    </div>
</div>
