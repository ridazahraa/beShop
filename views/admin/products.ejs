<div class="top-bar">
    <h1><i class="fas fa-box"></i> Products</h1>
    <div class="actions">
        <a href="/admin/products/add" class="btn btn-success">
            <i class="fas fa-plus"></i> Add Product
        </a>
    </div>
</div>

<% if (message) { %>
    <div class="alert alert-<%= messageType %>">
        <%= message %>
    </div>
<% } %>

<div class="content-box">
    <style>
        .search-filter {
            margin-bottom: 20px;
            display: flex;
            gap: 10px;
            align-items: center;
        }

        .search-filter input,
        .search-filter select {
            padding: 8px;
            border: 1px solid #ccc;
        }

        .search-filter input {
            flex: 1;
            max-width: 300px;
        }

        .products-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .products-table th,
        .products-table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .products-table th {
            background: #f8f9fa;
            font-weight: 600;
            color: #2c3e50;
        }

        .products-table tr:hover {
            background: #f8f9fa;
        }

        .product-img {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border: 1px solid #ddd;
        }

        .badge {
            padding: 4px 8px;
            font-size: 11px;
            font-weight: bold;
            border: 1px solid transparent;
        }

        .badge-sale {
            background: #e74c3c;
            color: white;
        }

        .badge-regular {
            background: #95a5a6;
            color: white;
        }

        .badge-category {
            background: #3498db;
            color: white;
        }

        .action-buttons {
            display: flex;
            gap: 10px;
        }

        .btn-sm {
            padding: 6px 12px;
            font-size: 12px;
        }

        .no-products {
            text-align: center;
            padding: 40px;
            color: #7f8c8d;
        }
    </style>

    <% if (products.length > 0) { %>
        <table class="products-table">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                    <tr>
                        <td>
                            <img src="<%= product.image %>" alt="<%= product.name %>" class="product-img">
                        </td>
                        <td><strong><%= product.name %></strong></td>
                        <td>
                            <span class="badge badge-category">
                                <%= product.category === 'for-her' ? 'For Her' : 'For Him' %>
                            </span>
                        </td>
                        <td>
                            <% if (product.onSale && product.originalPrice) { %>
                                <s>£<%= product.originalPrice.toFixed(2) %></s><br>
                                <strong>£<%= product.price.toFixed(2) %></strong>
                            <% } else { %>
                                £<%= product.price.toFixed(2) %>
                            <% } %>
                        </td>
                        <td>
                            <% if (product.onSale) { %>
                                <span class="badge badge-sale">ON SALE</span>
                            <% } else { %>
                                <span class="badge badge-regular">Regular</span>
                            <% } %>
                        </td>
                        <td>
                            <div class="action-buttons">
                                <a href="/admin/products/edit/<%= product._id %>" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <form action="/admin/products/delete/<%= product._id %>" method="POST" style="display: inline;" 
                                      onsubmit="return confirm('Are you sure you want to delete this product?');">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <div class="no-products">
            <i class="fas fa-box-open" style="font-size: 48px; margin-bottom: 20px; opacity: 0.3;"></i>
            <h3>No products found</h3>
            <p>Start by adding your first product</p>
            <a href="/admin/products/add" class="btn btn-success" style="margin-top: 20px;">
                <i class="fas fa-plus"></i> Add Product
            </a>
        </div>
    <% } %>
</div>
