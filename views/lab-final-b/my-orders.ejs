<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/checkout.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        .table thead th {
            background-color: #e9ecef;
            color: #495057;
            text-transform: uppercase;
            font-size: 0.9rem;
        }

        .table tbody tr:hover {
            background-color: #f8f9fa;
        }

        .badge {
            font-size: 0.85rem;
        }

        .alert {
            border-radius: 5px;
        }
    </style>
</head>

<body>
    <!-- Header -->
    <header class="header">
        <div class="header-container">
            <a href="/">
                <img src="/images/Logo.png" alt="BeShop Logo" class="logo-image" />
            </a>
        </div>
    </header>

    <main class="checkout-container">
        <div class="checkout-content">
            <!-- Order Lookup Section -->
            <section class="checkout-section">
                <h2 class="section-title">
                    <i class="fas fa-history"></i> My Orders
                </h2>
                <p class="text-muted mb-4">Enter your email address to view your order history</p>

                <!-- Email Lookup Form -->
                <div class="card mb-4">
                    <div class="card-body">
                        <form action="/order/my-orders/lookup" method="POST" class="needs-validation" novalidate>
                            <div class="row g-3">
                                <div class="col-md-8">
                                    <label for="email" class="form-label">Email Address</label>
                                    <input 
                                        type="email" 
                                        class="form-control" 
                                        id="email" 
                                        name="email" 
                                        placeholder="rida@gmail.com"
                                        value="<%= email || '' %>"
                                        required
                                    >
                                    <div class="invalid-feedback">
                                        Please provide a valid email address.
                                    </div>
                                </div>
                                <div class="col-md-4 d-flex align-items-end">
                                    <button type="submit" class="btn btn-primary w-100">
                                        <i class="fas fa-search"></i> Search Orders
                                    </button>
                                </div>
                            </div>
                            
                            <% if (typeof error !== 'undefined' && error) { %>
                                <div class="alert alert-danger mt-3 mb-0">
                                    <i class="fas fa-exclamation-circle"></i> <%= error %>
                                </div>
                            <% } %>
                        </form>
                    </div>
                </div>

                <!-- Order Results -->
                <% if (searched) { %>
                    <% if (orders && orders.length > 0) { %>
                        <h4 class="mb-3">Order History for <%= email %></h4>
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Date</th>
                                        <th>Total Amount</th>
                                        <th>Status</th>
                                        <th>Details</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% orders.forEach(order => { %>
                                        <tr>
                                            <td>
                                                <small class="text-muted">#<%= order._id.toString().substring(0, 8) %>...</small>
                                            </td>
                                            <td><%= new Date(order.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %></td>
                                            <td><strong>$<%= order.totalAmount.toFixed(2) %></strong></td>
                                            <td>
                                                <% 
                                                    let statusClass = 'secondary';
                                                    if (order.status === 'Placed') statusClass = 'info';
                                                    if (order.status === 'Processing') statusClass = 'warning';
                                                    if (order.status === 'Shipped') statusClass = 'primary';
                                                    if (order.status === 'Delivered') statusClass = 'success';
                                                    if (order.status === 'Cancelled') statusClass = 'danger';
                                                %>
                                                <span class="badge bg-<%= statusClass %>">
                                                    <%= order.status %>
                                                </span>
                                            </td>
                                            <td>
                                                <a href="/order/details/<%= order._id %>" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i> View Details
                                                </a>
                                                <button class="btn btn-sm btn-outline-info" type="button" data-bs-toggle="collapse" data-bs-target="#order-<%= order._id %>" aria-expanded="false" style="margin-left: 5px;">
                                                    <i class="fas fa-list"></i> Quick View
                                                </button>
                                            </td>
                                        </tr>
                                        <tr class="collapse" id="order-<%= order._id %>">
                                            <td colspan="5">
                                                <div class="p-3">
                                                    <h6>Order Items:</h6>
                                                    <ul class="list-group">
                                                        <% order.products.forEach(product => { %>
                                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                                <div>
                                                                    <strong><%= product.name %></strong>
                                                                    <br>
                                                                    <small class="text-muted">Quantity: <%= product.quantity %> Ã— $<%= product.price.toFixed(2) %></small>
                                                                </div>
                                                                <span class="badge bg-primary rounded-pill">
                                                                    $<%= (product.price * product.quantity).toFixed(2) %>
                                                                </span>
                                                            </li>
                                                        <% }); %>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No orders found for <strong><%= email %></strong>
                        </div>
                    <% } %>
                <% } %>

                <div class="mt-4">
                    <a href="/" class="btn btn-secondary">
                        <i class="fas fa-home"></i> Back to Home
                    </a>
                </div>
            </section>
        </div>
    </main>

    <script>
        // Bootstrap form validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
</body>

</html>

